.chat-main
  .chat-main__group-info
    .chat-main__group-info__left
      .chat-main__group-info__left__name
        = @group.name
      .chat-main__group-info__left__group
        Member :
        - @group.users.each do |group| 
          = group.name
    = link_to edit_group_path(params[:group_id]), class: "chat-main__group-info__btn" do
      Edit
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    .form
      = form_for [@group, @message] do |f|
        .form__mask
          = f.text_field :content, class: 'form__mask__message', placeholder: 'type a message'
          = f.label :image, class: 'form__mask__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__submit'